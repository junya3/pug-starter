{
  "name": "pug-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "watch:pug": "pug src/app/ -w -o dist/ --basedir src",
    "watch:scss": "sass --watch src/app/assets/style:dist/assets/style --load-path=src/component",
    "watch:ts": "tsc --watch",
    "copy:images": "copyfiles -u 1 public/assets/image/** dist",
    "serve": "live-server dist --port=8080 --open",
    "watch": "concurrently \"npm run watch:pug\" \"npm run watch:scss\" \"npm run watch:ts\" \"npm run copy:images\" \"npm run serve\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "prettier": "3.6.2",
    "sass": "^1.89.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.3"
  }
}
